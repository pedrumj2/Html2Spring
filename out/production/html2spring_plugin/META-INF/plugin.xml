<idea-plugin>
  <id>com.pedrumjalali.jetbrains.plugins.html2spring</id>
  <name>html2spring</name>
  <version>1.0</version>

  <description><![CDATA[
      Converts include statements for external javascript and css files into
      include statements for wordpress
    ]]></description>

  <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="145.0"/>


  <depends>com.intellij.modules.platform</depends>

  <actions>
    <action id="php2html" class="com.pedrumjalali.jetbrains.plugins.HtmlToSpringAction" text="_Convert " description="A test menu item">
      <add-to-group group-id="ToolsMenu"/>
    </action>
  </actions>


</idea-plugin>